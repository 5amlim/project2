<%- include('../partials/userheader') %>
<br><br>
<h2>Edit Rating for <%=recipe.userName%>'s <b><%=recipe.name%></b></h2>
<form id="edit-form" action="/recipes/<%= recipe.id %>/ratings/<%= rating.id%>?_method=PUT" method="POST">
    <label for="recipeName">Rating</label>
    <br>
    <select class="form-control form-control-sm" name="rating">
        <option value="<%=rating.rating%>"><%=rating.rating%></option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <br><br>
    <label>Comment</label>
    <br>
    <textarea class="form-control" name="content"><%=rating.content%></textarea>
    <br>
    <button class="me-2 mt-2 btn btn-outline-primary btn-sm" type="submit">Save Recipe</button>
  </form>