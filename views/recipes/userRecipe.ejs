<%- include('../partials/userheader') %>
<br>

<% recipe.forEach(function(r) { %>
  <body>
    <h3 class="recipe-name"><%= r.name %> <small>(<%= r.cuisineType %>)</small></h3>
    <h5>Difficulty:</h5>
    <p><%= r.difficulty %></p>
    <h5>Ingredients:</h5>
    <p><%= r.ingredients %></p>
    <h5>Instructions:</h5>
    <p><%= r.instructions %></p>
  </body>
  <% if (user && user._id.equals(r.user)) { %>
    <form action="/recipes/<%= r.id %>" method="GET">
      <button type="submit">View Details</button>
    </form>
    <form action="/recipes/<%= r.id %>?_method=DELETE" method="POST">
      <button type="submit">Delete Recipe</button>
    </form>
    <br><br>
    <% } %>
<% }) %>
