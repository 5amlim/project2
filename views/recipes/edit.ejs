<%- include('../partials/userheader') %>
<br><br>
<h2 class="animate__animated animate__fadeIn">Edit Recipe</h2>
<form id="edit-form" action="/recipes/<%= recipe.id %>?_method=PUT" method="POST">
    <label for="recipeName">Recipe Name</label>
    <br>
    <input class="form-control" id="recipeName" type="text" name="name" value="<%=recipe.name%>">
    <br><br>
    <label for="cuisineType">Cuisine Type</label>
    <br>
    <input class="form-control" id="cuisineType" type="text" name="cuisineType" value="<%=recipe.cuisineType%>">
    <br><br>
    <label for="ingredients">Ingredients <small>(separate by comma)</small></label>
    <br>
    <textarea class="form-control" id="ingredients" type="text" name="ingredients" ><%=recipe.ingredients%></textarea>
    <br><br>
    <label for="instructions">Instructions</label>
    <br>
    <textarea class="form-control" id="instructions" type="text" name="instructions"><%=recipe.instructions%></textarea>
    <br><br>
    <label for="difficulty">Difficulty</label>
    <br>
    <select class="form-control form-control-sm" id="difficulty" name="difficulty">
        <option value="<%=recipe.difficulty%>" selected><%=recipe.difficulty%></option>
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate (homecook)</option>
        <option value="professional">Professional</option>
    </select>
    <br><br>
    <button class="me-2 mt-2 btn btn-outline-primary btn-sm" type="submit">Save Recipe</button>
  </form>