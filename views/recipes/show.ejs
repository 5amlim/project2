<%- include('../partials/userheader') %>
<br><br>

<body>
    <h2 class="recipe-name"><%= recipe.name %> <small>(<%= recipe.cuisineType %>)</small></h2>
    <br><br>
    <h5>Difficulty:</h5>
    <p><%= recipe.difficulty %></p>
    <h5>Ingredients:</h5>
    <p><%= recipe.ingredients %></p>
    <h5>Instructions:</h5>
    <p><%= recipe.instructions %></p>
    <a href="/recipes/<%=recipe.id%>/edit">Edit Recipe</a>
</body>

<br><br>
<h5>Ratings</h5>
<% if (user) { %>
    <form id="add-rating-form" method="POST" action="/recipes/<%= recipe._id %>/ratings">
    <label>Comment</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
        <option value="none" selected disabled hidden>Select a Rating</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <input type="submit" value="Add Rating">
    </form>
<% } else { %>
    <h5><a href="/auth/google">Log In</a> to rate</h4>
<% } %>

<br><br>

<h5>See what others are saying about this recipe:</h5>
<% if (recipe.ratings.length) { %>
    <table>
      <thead>
        <tr>
            <th></th>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% recipe.ratings.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td>  
                <% if (user && user._id.equals(r.user)) { %>
                <form action="/ratings/<%= r.id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                <% } %>
            </td>  
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
        <tr>

          <td colspan="3"></td>
          <td><strong><%= (total / recipe.ratings.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <p>(No Ratings Yet)</p>
  <% } %>